<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserTesting" thread-count="2">
	<listeners>
	<listener class-name="generatereport.Listeners"></listener>
</listeners>
  <test name="ChromeTest">
	  <parameter name="browser" value="chrome"></parameter>
    <classes>
      
      <class name="testScript.LoginTest">
      <methods>
		  <include name="verifyTheUserIsAbleToLoginUsingValidCredentials"></include> 
		  
	  </methods>
	  </class>
    </classes>
  </test> <!-- Test -->
  
  <test name="EdgeTest">
	  <parameter name="browser" value="edge"></parameter>
    <classes>
      
      <class name="testScript.LoginTest">
      <methods>
		  <include name="verifyTheUserIsAbleToLoginUsingValidCredentials"></include> 
		  
	  </methods>
	  </class>
    </classes>
  </test> <!-- Test -->
  
  
</suite> <!-- Suite -->


<!-- if we use exclude tag, except that method, other testcases will get executed -->